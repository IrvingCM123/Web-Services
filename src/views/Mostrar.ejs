<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/header.ejs")%>
    <%- include("partials/estilos.ejs")%>
    <title>Document</title>
</head>

<body>

  <div class="container p-4">
    <div class="row">
      <% books.forEach(function (book) { %>
        <div class="col-md-4">
          <div class="card">

            <div class="card-header">
              <%= book.title %> / <%= book.author%>
            </div>
            <div class="card-body">
              <%= book.Descripcion %>
            </div>
            <div class="card-body">
              <%= book.image %>
            </div>
            <div class="card-footer">
              <button class="btn btn-danger">
                Eliminar
              </button>
            </div>

          </div>
        </div>
        <% }) %>
    </div>

</body>

</html>